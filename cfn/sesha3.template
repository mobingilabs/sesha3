                "chmod +x /home/ec2-user/install &> /home/ec2-user/cmd.log\n",
                "/home/ec2-user/install auto &> /home/ec2-user/cmd.log\n",
                "python /home/ec2-user/awslogs-agent-setup.py -n --region ap-northeast-1 -c /home/ec2-user/awslogs.conf &> /home/ec2-user/cmd.log\n",
